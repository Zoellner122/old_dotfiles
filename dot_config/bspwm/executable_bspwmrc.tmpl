#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &


{{ if eq .chezmoi.hostname "nero" }}
bspc monitor HDMI-0 -d 1 2 3 4 5
bspc monitor DP-2 -d 6 7 8 9 10
{{ else if eq .chezmoi.hostname "arch-vm" }}
bspc monitor -d 1 2 3 4 5
{{ end }}

bspc config border_width         4
bspc config window_gap          6

bspc config automatic_scheme longest_side
bspc config initial_polarity first_child
bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config pointer_follows_focus true
bspc config focus_follows_pointer true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a firefox desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Yad state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a virt-manager manage=off
bspc rule -a leagueclientux.exe manage=off



# Border
bspc config focused_border_color        "#82B0F7"
bspc config normal_border_color         "#00274E"
bspc config active_border_color         "#4149A0"

#
# Autostart
#
# Set display from arandr saved script

{{ if eq .chezmoi.hostname "nero" }}
bash ~/.config/bspwm/scripts/check_applets.sh &
sh ~/.screenlayout/monitor.sh &
# Bar
~/.config/polybar/launch &
# Notifications
/usr/bin/dunst &
# Polkit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
# Wallpaper
nitrogen --restore &
# Dex
dex -a -s ~/.config/autostart/  & 
# Picom
picom -b &
# Network Applet
nm-applet &
flameshot &
solaar -w hide &
discord &
steam-runtime &
{{ else if eq .chezmoi.hostname "arch-vm" }}
bash ~/.config/bspwm/scripts/check_applets.sh &
sh ~/.screenlayout/monitor.sh &
# Launch polybar
~/.config/polybar/launch &
# Launcing PolKit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
# Wallpaper
nitrogen --restore &
# Dex
dex -a -s ~/.config/autostart/ &
# Picom
picom -b &
#misc
nm-applet &
flameshot &

{{ end }}
xsetroot -cursor_name left_ptr &
